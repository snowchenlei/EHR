@page
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Snow.Hcm.Localization
@using Snow.Hcm.Permissions
@using Snow.Hcm.Web.Menus
@using Snow.Hcm.Web.Pages.Departments
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@model Snow.Hcm.Web.Pages.Positions.IndexModel
@inject IStringLocalizer<HcmResource> L
@inject IAuthorizationService Authorization
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Positions"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:Positions"].Value);
    PageLayout.Content.MenuItemName = HcmMenus.Departments;
}
@section scripts
{
    <abp-script-bundle name="@typeof(IndexModel).FullName">
        <abp-script src="/Pages/Positions/Index.js" />
    </abp-script-bundle>
}
<abp-card id="PositionsWrapper">
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Positions"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                @if (await Authorization.IsGrantedAsync(HcmPermissions.Positions.Create))
                {
                    <abp-button text="@L["NewPosition"].Value"
                                name="CreatePosition"
                                icon="plus"
                                button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="PositionsTable"></abp-table>
    </abp-card-body>
</abp-card>