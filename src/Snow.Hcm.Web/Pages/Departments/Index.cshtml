@page
@using Microsoft.AspNetCore.Authorization
@using Snow.Hcm.Localization;
@using Snow.Hcm.Web.Pages.Departments;
@using Microsoft.Extensions.Localization
@using Snow.Hcm.Permissions
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Snow.Hcm.Web.Menus
@model IndexModel
@inject IStringLocalizer<HcmResource> L
@inject IAuthorizationService Authorization
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["Departments"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:Departments"].Value);
    PageLayout.Content.MenuItemName = HcmMenus.Departments;
}
@section scripts
{
    <abp-script-bundle name="@typeof(IndexModel).FullName">
        <abp-script src="/Pages/Departments/Index.js" />
    </abp-script-bundle>
}
<abp-card id="DepartmentsWrapper">
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Departments"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right">
                @if (await Authorization.IsGrantedAsync(HcmPermissions.Departments.Create))
                {
                    <abp-button text="@L["NewDepartment"].Value"
                                name="CreateDepartment"
                                icon="plus"
                                button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="DepartmentsTable"></abp-table>
    </abp-card-body>
</abp-card>