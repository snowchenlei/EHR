@page
@using Snow.Hcm.Localization;
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<HcmResource> L
@model Snow.Hcm.Web.Pages.Employees.EducationExperiences.CreateModalModel
@{
    Layout = null;
}
<form method="post" action="@Url.Page("/Employees/EducationExperiences/CreateModal")">
    <abp-modal>
        <abp-modal-header title="@L["NewEducationExperience"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="EducationExperience.EmployeeId" />
            <abp-input asp-for="EducationExperience.SchoolName" />
            <abp-input asp-for="EducationExperience.Specialty" />
            <abp-select asp-for="EducationExperience.Degree" />
            <abp-input asp-for="EducationExperience.EducationTime" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>