@page
@using Snow.Hcm.Localization;
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<HcmResource> L
@model Snow.Hcm.Web.Pages.Employees.EmergencyContacts.EditModalModel
@{
    Layout = null;
}
<form method="post" action="@Url.Page("/Employees/EmergencyContacts/EditModal")">
    <abp-modal>
        <abp-modal-header title="@L["Edit"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="EmergencyContact.EmployeeId" />
            <abp-input asp-for="EmergencyContact.Name" />
            <abp-input asp-for="EmergencyContact.PhoneNumber" type="number" />
            <abp-input asp-for="EmergencyContact.Relation" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>