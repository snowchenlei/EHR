@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Volo.Abp.Identity.Localization
@model Snow.Hcm.Web.Pages.Regions.CreateModalModel
@inject IHtmlLocalizer<IdentityResource> L
@{
    Layout = null;
}
<form asp-page="/Regions/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewRole"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Region.Id" type="number" />
            <abp-input asp-for="Region.Name" />
            <abp-input asp-for="Region.ParentName"/>
            <abp-input asp-for="Region.Alias" />
            <abp-input asp-for="Region.AreaCode" />
            <abp-input asp-for="Region.PostCode" />
            <abp-input asp-for="Region.Latitude" type="number" />
            <abp-input asp-for="Region.Longitude" type="number" />
            <abp-input asp-for="Region.EnglishName" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
